<!DOCTYPE html>
<html>
  <head>
    <title>ClothingSite</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path %>
      <%= link_to "Sign up", new_user_registration_path %>
    <% end %>

    <%= link_to 'Clothing', clothing_index_path, class: 'clothing_head' %>

    <%= link_to 'View Shopping Cart', cart_index_path, class: 'cart_head' %>

    <% unless @categories_page %>
      <%= link_to 'Categories', categories_path, class: 'categories_head' %>
      <%= link_to "Women's footwear", class: 'categories' %>
      <%= link_to "Men's footwear", class: 'categories' %>
      <%= link_to "Women's casualwear", class: 'categories' %>
      <%= link_to "Men's casualwear", class: 'categories' %>
      <%= link_to "Women's formalwear", class: 'categories' %>
      <%= link_to "Men's formalwear", class: 'categories' %>
    <% end %>

    <%= yield %>
  </body>
</html>
